<%- include('../../partials/header.ejs') %>


<%- include('../../partials/navbar.ejs') %>

<div class="container">
    <hr>
    <h2>Articles</h2>
    <a class="btn btn-success" href="/admin/articles/new">Criar novo article</a>
    <hr>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Título</th>
                <th>Slug</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>

        <% articles.forEach(article=>{ %>
            <tr>
                <td><%= article.id %></td>
                <td><%= article.title %></td>
                <td><%= article.slug %></td>
                <td><%= article.categoryId %></td>
                <td>
                    <a class="btn btn-warning" href="/admin/articles/edit/<%= article.id %>">Editar</a>

                    <form method="post" action="/articles/delete" style="display: inline" onsubmit="confirmarDelecao(event, this)">
                        <input type="hidden" name="id" value="<%= article.id %>" >
                        <button class="btn btn-danger">Deletar</button>
                    </form>

                </td>
            </tr>
        <%})%>

        </tbody>
    </table>

</div>

<%- include('../../partials/footer.ejs') %>


<script>
    function confirmarDelecao(event, form) {
        event.preventDefault()
        let resultado = confirm('voce deseja deletar o artigo ?')
        if(resultado){
            console.log('escolhi deletar');
            form.submit();
        }else{
            console.log('escolhi nao deletar');
        }

    }
</script>